<?xml version="1.0" encoding="utf-8"?>
<Installer>
  <ID>B63BFBDD-14E3-49AE-BFF3-ABE2BBA91ADB</ID>

  <Name>OpenTAP 9</Name>

  <DefaultInstallDir>{UserProfile}/.local/share/opentap</DefaultInstallDir>
  <Publisher>Keysight Technologies</Publisher>
  <URL>http://opentap.io</URL>
  <SetupIcon>OpenTAP</SetupIcon>

  <TopImage>LogoTop.bmp</TopImage>
  <SideImage>OpenTAP</SideImage>
  <AppBranding>OpenTAP</AppBranding>

	<EULA></EULA>
  <SignCert>Keysight Technologies, Inc</SignCert>

  <OpenTap>
    <PackageSpecifier Name="OpenTAP.TapPackage" />
  </OpenTap>
  
  <Options>
    <Option Name="sdk" Default="false" Group="Additional Packages" Description="SDK" Tooltip="Install NuGet templates and SDK examples."/>
  </Options>

  <Install Option="sdk">
    <PackageSpecifier Name="SDK.TapPackage" />
  </Install>

</Installer>
