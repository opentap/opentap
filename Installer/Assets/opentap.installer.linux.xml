<?xml version="1.0" encoding="utf-8"?>
<Installer>
  <ID>B63BFBDD-14E3-49AE-BFF3-ABE2BBA91ADB</ID>

  <Name>OpenTAP 9</Name>

  <DefaultInstallDir>/opt/opentap</DefaultInstallDir>
  <Publisher>Keysight Technologies</Publisher>
  <URL>http://opentap.io</URL>
  <SetupIcon>opentap.ico</SetupIcon>

  <TopImage>LogoTop.bmp</TopImage>
  <SideImage>LogoSide.bmp</SideImage>
  
  <EULA></EULA>
  <SignCert>Keysight Technologies, Inc</SignCert>

  <OpenTap>
    <PackageSpecifier Name="OpenTAP.TapPackage" />
  </OpenTap>
  
  <Options>
    <Option Name="sdk"   Default="true"  Group="Additional Installations" Description="SDK" Tooltip="Install NuGet templates and SDK examples."/>
  </Options>

  <Install Option="sdk">
    <PackageSpecifier Name="SDK" Version="$(GitVersion)" />
  </Install>

</Installer>
