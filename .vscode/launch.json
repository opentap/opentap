    "version": "0.2.0",
    "configurations": [
        {
            "name": "tap new project (.NET Core)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/tap.dll",
            "args": [ "sdk", "new", "project", "Test"],
            "cwd": "${workspaceFolder}/bin/Debug",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}